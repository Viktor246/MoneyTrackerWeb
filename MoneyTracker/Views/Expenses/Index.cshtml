@model IEnumerable<MoneyTracker.Models.Expense>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add expense
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfExpense)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubCategory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td width="30%">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td width="10%">
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td width="15%">
                    @Html.DisplayFor(modelItem => item.DateOfExpense)
                </td>
                <td width="15%">
                    @Html.DisplayFor(modelItem => item.SubCategory.Name)
                </td>
                <td class="text-end">
                    <div class="btn-group w-80" role="group">
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
